<h1>アラート</h1>
  <div class="row">
    <div class="col-md-12 text-center">
      <% if !@users.blank? %>
        <table class="mt-3 mb-3 table_design08" >
          <thead>
            <tr>
              <th>社員ID</th>
              <th>社員名</th>
              <th>部署</th>
              <th>残業時間</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <% if !user.admin? %>
              <tr>
                <td><%= user.employee_id %></td>
                <td><%= link_to user.fullname, user %></td>
                <td><%= user.department %></td>
                <td><%= user.total_overtime_hours(@this_month, @this_year) %></td>
              </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @users %>
      <% end %>
    </div>
  </div>